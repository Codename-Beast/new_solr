<?xml version="1.0" encoding="UTF-8" ?>
<schema name="moodle_core_schema" version="1.6">

  <!-- Unique key for Moodle -->
  <uniqueKey>id</uniqueKey>

  <!-- ===============================
       Field Types
  ================================== -->
  <fieldType name="string" class="solr.StrField" sortMissingLast="true" />
  <fieldType name="boolean" class="solr.BoolField" />
  <fieldType name="int" class="solr.IntPointField" docValues="true" />
  <fieldType name="long" class="solr.LongPointField" docValues="true" />
  <fieldType name="date" class="solr.DatePointField" docValues="true" />

  <!-- Text field for English and German search -->
  <fieldType name="text_general" class="solr.TextField" positionIncrementGap="100">
    <analyzer type="index">
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <filter class="solr.LowerCaseFilterFactory"/>
      <filter class="solr.StopFilterFactory" ignoreCase="true" words="stopwords_en.txt"/>
      <filter class="solr.StopFilterFactory" ignoreCase="true" words="stopwords_de.txt"/>
      <filter class="solr.PorterStemFilterFactory"/>
    </analyzer>
    <analyzer type="query">
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <filter class="solr.LowerCaseFilterFactory"/>
      <filter class="solr.StopFilterFactory" ignoreCase="true" words="stopwords_en.txt"/>
      <filter class="solr.StopFilterFactory" ignoreCase="true" words="stopwords_de.txt"/>
      <filter class="solr.SynonymGraphFilterFactory" synonyms="synonyms.txt" ignoreCase="true" expand="true"/>
      <filter class="solr.PorterStemFilterFactory"/>
    </analyzer>
  </fieldType>

  <!-- ===============================
       Moodle-Fields
  ================================== -->
  <field name="id" type="string" indexed="true" stored="true" required="false"/>
  <field name="itemid" type="int" stored="true" indexed="true"/>
  <field name="title" type="text_general" stored="true" indexed="true"/>
  <field name="content" type="text_general" stored="true" indexed="true"/>
  <field name="contextid" type="int" stored="true" indexed="true"/>
  <field name="areaid" type="string" stored="true" indexed="true"/>
  <field name="courseid" type="int" stored="true" indexed="true"/>
  <field name="owneruserid" type="int" stored="true" indexed="true"/>
  <field name="modified" type="date" stored="true" indexed="true"/>
  <field name="userid" type="int" stored="true" indexed="true"/>
  <field name="description1" type="text_general" stored="true" indexed="true"/>
  <field name="description2" type="text_general" stored="true" indexed="true"/>
  <field name="solr_filegroupingid" type="string" stored="true" indexed="true"/>
  <field name="solr_fileid" type="string" stored="true" indexed="true"/>
  <field name="solr_filecontenthash" type="string" stored="true" indexed="true"/>
  <field name="solr_fileindexstatus" type="int" stored="true" indexed="true"/>
  <field name="solr_filecontent" type="text_general" stored="false" indexed="true"/>
  <field name="groupid" type="int" stored="true" indexed="true"/>

  <!-- Versionierungsfeld -->
  <field name="_version_" type="long" indexed="true" stored="true" docValues="true"/>

</schema>
